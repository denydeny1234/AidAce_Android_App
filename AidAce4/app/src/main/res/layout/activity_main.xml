<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="@color/black">

    <Button
        android:id="@+id/btn_add_ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1F1D1D"
        android:text="+"
        android:textColor="@color/white"
        android:onClick="onButtonClick"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.81"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.65999997" />

    <Button
        android:id="@+id/btn_remove_ml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1F1D1D"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.65999997" />

    <ImageView
        android:id="@+id/waterBack"
        android:layout_width="101dp"
        android:layout_height="30dp"
        android:onClick="navigateToNewActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:srcCompat="@drawable/waterback"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1"
        app:srcCompat="@drawable/gray_rounded_corners_box" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/watermain" />

    <TextView
        android:id="@+id/watercurrentadjustment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current: +100"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.100000024" />

    <Button
        android:id="@+id/btnadjustmlminus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1F1D1D"
        android:text="-"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1" />

    <Button
        android:id="@+id/btnadjusmlplus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#1F1D1D"
        android:text="+"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/watertextml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 ml"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.64" />

    <TextView
        android:id="@+id/watertextadjustml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 ml"
        android:textColor="@color/white"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.50"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.96"
        tools:ignore="TextSizeCheck" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="280dp"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.78"
        app:srcCompat="@drawable/white_line" />




    <TextView
        android:id="@+id/adjust_measurement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adjust Measurement"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.85" />

    <ImageView
        android:id="@+id/scrollhelp"
        android:layout_width="wrap_content"
        android:layout_height="969dp"
        app:layout_constraintTop_toTopOf="@+id/adjust_measurement"
        app:srcCompat="@drawable/gray_rounded_corners_box"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/secondmaingraybox"
        android:layout_width="350dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.6"
        app:srcCompat="@drawable/gray_rounded_corners_box" />

    <ImageView
        android:id="@+id/ideaiconwater"
        android:layout_width="65dp"
        android:layout_height="64dp"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.13"
        app:srcCompat="@drawable/idea_icon" />

    <TextView
        android:id="@+id/waterintaketoptext"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Feeling fatigued? Water intake plays a major role!"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.29000002" />

    <TextView
        android:id="@+id/waterintaketoptext2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Here are some tips on how to increase your daily water intake:"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.45" />

    <ImageView
        android:id="@+id/whiteline2"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.38"
        app:srcCompat="@drawable/white_line" />

    <ImageView
        android:id="@+id/waterbottleicon"
        android:layout_width="20dp"
        android:layout_height="49dp"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.57"
        app:srcCompat="@drawable/water_bottle_icon" />

    <ImageView
        android:id="@+id/waterstrawicon"
        android:layout_width="27dp"
        android:layout_height="54dp"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.98"
        app:srcCompat="@drawable/water_straw_icon" />

    <ImageView
        android:id="@+id/watertasteicon"
        android:layout_width="38dp"
        android:layout_height="42dp"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.13"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.84000003"
        app:srcCompat="@drawable/water_taste_icon" />

    <ImageView
        android:id="@+id/waterremindericon"
        android:layout_width="45dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.71000004"
        app:srcCompat="@drawable/water_reminder_icon" />

    <TextView
        android:id="@+id/watertipone"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="1. Keeping a water bottle with you at all times acts as a reminder!"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.565" />

    <TextView
        android:id="@+id/watertiptwo"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="2. Set a reminder on your phone."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.86"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.7" />

    <TextView
        android:id="@+id/watertipthree"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="3. Add flavor to your water."
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.825" />

    <TextView
        android:id="@+id/watertipfour"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="4. Use a straw, it makes it easier and it's quicker!"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/secondmaingraybox"
        app:layout_constraintEnd_toEndOf="@+id/secondmaingraybox"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="@+id/secondmaingraybox"
        app:layout_constraintTop_toTopOf="@+id/secondmaingraybox"
        app:layout_constraintVertical_bias="0.96" />


</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>